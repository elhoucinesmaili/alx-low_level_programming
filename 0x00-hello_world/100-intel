#!/bin/bash

# Check if CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "Error: CFILE environment variable is not set."
    exit 1
fi

# Extract filename without extension
FILENAME=$(basename -- "$CFILE")
FILENAME="${FILENAME%.*}"

# Generate assembly file with Intel syntax
gcc -S -masm=intel "$CFILE" -o "$FILENAME.s"

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "Intel assembly code generated successfully."
else
    echo "Error generating Intel assembly code."
fi
